<resources>

    <style name="TextAppearance" parent="">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHighlight">?attr/colorControlHighlight</item>
        <item name="android:textColorHint">@color/la_text_hint</item>
        <item name="android:textColorLink">@color/la_text_link</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.User" />

    <style name="TextAppearance.User.Name">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="TextAppearance.User.Email">
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
